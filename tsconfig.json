{
	"compilerOptions": {
		"noImplicitAny": true,
		"removeComments": false,
		"preserveConstEnums": true,
		"outFile": "dist/js/script.js",
		"sourceMap": true,
		"sourceRoot": "../../src/ts",
		"target": "ES5",
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"jsx": "preserve",
		"strictNullChecks": true,
		"noImplicitThis": true
	},
	"exclude": [
		"node_modules",
		"build",
		"test",
		"dist",
		".idea"
	]
}