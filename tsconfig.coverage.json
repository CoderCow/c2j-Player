{
	"compilerOptions": {
		"removeComments": false,
		"preserveConstEnums": true,
    "sourceMap": false,
		"inlineSourceMap": true,
    "inlineSources": true,
		"target": "ES5",
    "module": "commonjs",
		"noImplicitReturns": true,
		"noFallthroughCasesInSwitch": true,
		"jsx": "preserve",
		"strictNullChecks": true,
		"noImplicitThis": true,
		"skipLibCheck": false,
    "pretty": true,
    "noEmitOnError": true
	},
  "exclude": [
    ".awcache",
    ".idea",
    "node_modules",
	  "lib",
    "dist",
    "**/*.test.ts"
  ]
}
